rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Items images folder
    match /items-images/{fileName} {
      allow read: if true; // Anyone can view item images
      allow write: if request.auth != null && 
        request.resource.size < 5 * 1024 * 1024 && // Max 5MB
        request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // User avatars folder
    match /user-avatars/{fileName} {
      allow read: if true; // Anyone can view user avatars
      allow write: if request.auth != null && 
        request.auth.uid == fileName.split('_')[0] && // User can only upload their own avatar
        request.resource.size < 2 * 1024 * 1024 && // Max 2MB
        request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
